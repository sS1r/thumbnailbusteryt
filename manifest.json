{

  "manifest_version": 2,
  "name": "ThumbnailBusterYT",
  "version": "0.1",
  "description": "View Youtube video thumbnails with max resolution",

  "permissions": [
    "contextMenus",
    "activeTab",
    "tabs"
  ],
  
  "background": {
    "scripts": ["vtn.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["findurl.js"]
    }
  ]

}